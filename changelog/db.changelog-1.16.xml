<?xml version="1.0" encoding="UTF-8"?> 
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet id="1.16-add-month-in-year-to-metrics" author="Leigh Godson"> 
        <addColumn tableName="metrics"> 
            <column name="month_in_year" type="INT"> 
                <constraints nullable="true"/> 
            </column> 
        </addColumn> 
    </changeSet> 
    <changeSet id="1.16-ux-update-metrics-include-month" author="Leigh Godson"> 
        <dropUniqueConstraint tableName="metrics" constraintName="uq_metrics_snapshot"/> 
        <addUniqueConstraint tableName="metrics" columnNames="snapshot_date, period_type, scheme_name, scheme_year, month_in_year" constraintName="uq_metrics_snapshot"/> 
    </changeSet>
</databaseChangeLog>